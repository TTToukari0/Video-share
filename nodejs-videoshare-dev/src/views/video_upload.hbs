<div class="card bg-dark text-white">

  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
      cloud_upload
    </span>
    Upload a Video
  </div>

  {{! IMAGE UPLOAD FORM }}
  <div class="card-body p-5">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <input
          type="file"
          name="image"
          class="form-control text-dark border-success"
          required
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          name="title"
          class="form-control bg-dark text-white border border-success"
          placeholder="Title for the Video"
          required
        />
      </div>

      <div class="mb-3">
        <textarea
          name="description"
          rows="2"
          class="form-control bg-dark text-white border border-success"
          placeholder="Description for the Video."
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <textarea
          name="classification"
          class="form-control bg-dark text-white border border-success"
          placeholder="classificationï¼Œ and ages admitted."
          required
        ></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i>
          Upload Video
        </button>
      </div>

    </form>
  </div>
</div>

</div>